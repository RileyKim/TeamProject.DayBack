<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.taeksukim.android.dayback.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/background2"
    >



    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/blackPen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/blackpen"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/blackavatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/blackPen"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:src="@drawable/blackavatar" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/blackgraph"
        android:src="@drawable/blackgraph"
        android:layout_alignTop="@+id/blackPen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="77dp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="13dp"
        android:text="DayBack"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/textSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTitle"
        android:layout_alignStart="@+id/textTitle"
        android:layout_below="@+id/textTitle"
        android:text="Emotion Diary" />

    <TextView
        android:id="@+id/textTimeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSubTitle"
        android:layout_alignStart="@+id/textSubTitle"
        android:layout_below="@+id/textSubTitle"
        android:text="Timeline"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/blackPen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textTimeLine" />


</RelativeLayout>
