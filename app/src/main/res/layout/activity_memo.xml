<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taeksukim.android.dayback.MemoActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/memoCancel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cancel"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/tongue_out"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tongue_out"
        app:layout_constraintRight_toLeftOf="@+id/memoSave"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/memoSave"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/save"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memoCancel"
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/editSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDate"
        android:layout_marginStart="12dp" />

    <EditText
        android:id="@+id/editContent"
        android:layout_width="368dp"
        android:layout_height="150dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Content"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSubject" />

</android.support.constraint.ConstraintLayout>
